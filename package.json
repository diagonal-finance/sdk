{
    "name": "@diagonal-finance/sdk",
    "version": "1.0.3",
    "description": "Diagonal finance SDK",
    "repository": "https://github.com/diagonal-finance/sdk",
    "homepage": "https://github.com/diagonal-finance/sdk",
    "author": {
        "name": "Diagonal Finance"
    },
    "license": "MIT",
    "main": "dist/index.js",
    "exports": {
        "import": "./dist/index.mjs",
        "require": "./dist/index.js",
        "browser": "./dist/diagonal.bundle.js"
    },
    "types": "dist/types/index.d.ts",
    "files": [
        "dist/",
        "src/"
    ],
    "scripts": {
        "build:watch": "rollup -c rollup.config.ts -w --configPlugin typescript",
        "build": "rimraf dist && rollup -c rollup.config.ts --configPlugin typescript",
        "prepublishOnly": "yarn build && pinst --disable",
        "postpublish": "pinst --enable",
        "postinstall": "husky install",
        "pre-commit": "lint-staged",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
        "prettier": "prettier -c .",
        "prettier:fix": "prettier -w .",
        "test": "jest --coverage",
        "test:watch": "jest --coverage --watch",
        "docs": "typedoc src/index.ts --out docs/"
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx}": [
            "eslint --config ./.eslintrc.json --ignore-path ./.eslintignore --ext .js,.jsx,.ts,.tsx ."
        ],
        "*.{js,jsx,json,md,ts,tsx}": [
            "prettier --config ./.prettierrc --write"
        ]
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "ethers": "^5.5.4"
    },
    "devDependencies": {
        "@babel/core": "^7.17.0",
        "@babel/preset-env": "^7.16.11",
        "@babel/preset-typescript": "^7.16.7",
        "@commitlint/cli": "^16.1.0",
        "@commitlint/config-conventional": "^16.0.0",
        "@rollup/plugin-commonjs": "^21.0.1",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^13.1.3",
        "@rollup/plugin-typescript": "^8.3.0",
        "@types/jest": "^27.4.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "^17.0.14",
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "@typescript-eslint/parser": "^5.10.2",
        "babel-jest": "^27.4.6",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jest": "^26.0.0",
        "husky": "^7.0.4",
        "jest": "^27.4.7",
        "jest-config": "^27.4.7",
        "lint-staged": "^12.3.3",
        "pinst": "^2.1.6",
        "prettier": "^2.5.1",
        "rimraf": "^3.0.2",
        "rollup": "^2.67.0",
        "rollup-plugin-cleanup": "^3.2.1",
        "ts-node": "^10.4.0",
        "tslib": "^2.3.1",
        "typedoc": "^0.22.11",
        "typescript": "^4.5.5"
    }
}
